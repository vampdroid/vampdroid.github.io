---
import { fetchYoutubeVideos } from '../../services/youtube';

const videos = await fetchYoutubeVideos();
---
<div class='video-list'>
	{videos.map((video: any) => (
		<a class="card card-small video-card group" href={`https://youtube.com/watch?v=${video.id}`} target="_blank" rel="noopener noreferrer">
			<div class="video-thumbnail">
				<img src={video.thumbnail} alt={video.title} class="thumbnail-img" />
				<div class="thumbnail-overlay"></div>
			</div>
			<div class="video-info">
				<h3 class="video-title">{video.title}</h3>
				<p class="video-meta">Video</p>
			</div>
		</a>
	))}
</div>

<style>
	.video-list {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.video-card {
		display: flex;
		flex-direction: row;
		gap: 1rem;
		text-decoration: none;
		align-items: center;
	}
	.video-card:hover {
		background-color: var(--color-card-hover);
	}
	.video-thumbnail {
		width: 6rem;
		height: 6rem;
		flex-shrink: 0;
		border-radius: 0.5rem;
		overflow: hidden;
		position: relative;
		background-color: var(--color-border);
	}
	.thumbnail-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s;
	}
	.video-card:hover .thumbnail-img {
		transform: scale(1.05);
	}
	.thumbnail-overlay {
		position: absolute;
		inset: 0;
		background-color: rgba(0, 0, 0, 0.2);
		transition: background-color 0.3s;
	}
	.video-card:hover .thumbnail-overlay {
		background-color: transparent;
	}
	.video-info {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	.video-title {
		font-weight: 500;
		font-size: 0.875rem;
		line-height: 1.375;
		margin-bottom: 0.5rem;
		transition: color 0.3s;
		color: var(--color-text);
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;  
		overflow: hidden;
	}
	.video-card:hover .video-title {
		color: var(--color-primary);
	}
	.video-meta {
		font-size: 0.75rem;
		color: var(--color-muted);
	}
</style>
