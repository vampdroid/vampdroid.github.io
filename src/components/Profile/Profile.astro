---
import Image from "astro/components/Image.astro";
const { title, description, image } = Astro.props;
---
<div class="card profile-card">
	<div class="profile-image-container">
		<div class="profile-image-wrapper">
			<Image class="profile-image" src={ image } alt={ title } />
		</div>
		<div class="status-dot"></div>
	</div>
	<div class="profile-content">
		<h1 class="font-display profile-title">{ title }</h1>
		<p class="text-muted profile-description">
			{ description }
		</p>
	</div>
</div>

<style>
	.profile-card {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		height: 100%;
	}
	.profile-image-container {
		position: relative;
		flex-shrink: 0;
	}
	.profile-image-wrapper {
		width: 6rem;
		height: 6rem;
		border-radius: 9999px;
		overflow: hidden;
		box-shadow: 0 0 0 2px rgba(19, 91, 236, 0.2); /* ring-primary/20 */
	}
	.profile-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	.status-dot {
		position: absolute;
		bottom: 0.25rem;
		right: 0.25rem;
		width: 1rem;
		height: 1rem;
		background-color: #22c55e;
		border: 2px solid var(--color-card);
		border-radius: 9999px;
	}
	.profile-title {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		color: var(--color-text);
		text-transform: uppercase;

		@media (min-width: 768px) {
			font-size: 1.875rem;
		}
	}
	.profile-description {
		font-size: 0.875rem;
		line-height: 1.625;

		@media (min-width: 768px) {
			font-size: 1rem;
		}
	}
</style>
