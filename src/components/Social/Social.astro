---
const { link, icon, color, text } = Astro.props;
---
<a href={link} class="card card-small social-card" target="_blank" rel="noopener noreferrer">
	<i class={`fa-brands ${icon} social-icon`} style={color && color !== 'inherit' ? `color: ${color};` : ''}></i>
	<span class="social-text">{text}</span>
</a>

<style>
	.social-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		transition: all 0.3s;
		text-decoration: none;
		height: 100%;
	}
	.social-card:hover {
		background-color: var(--color-card-hover);
	}
	.social-icon {
		font-size: 1.875rem;
		transition: transform 0.3s;
		color: var(--color-text);
	}
	.social-card:hover .social-icon {
		transform: scale(1.1);
	}
	.social-text {
		font-size: 0.75rem;
		font-weight: 500;
		margin-top: 0.25rem;
		color: var(--color-text);
	}
</style>
